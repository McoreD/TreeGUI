<Window x:Class="TreeGUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeGUI"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="About Window" Height="300" Width="300" Icon="TreeGUI.ico" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <GroupBox Header="Running from" DockPanel.Dock="Top">
            <TextBox x:Name="txtLocation"></TextBox>
        </GroupBox>
        <GroupBox Header="Loaded assemblies" Margin="8">
            <ListBox x:Name="lbAssemblies" />
        </GroupBox>
    </DockPanel>
</Window>